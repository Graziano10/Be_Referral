{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "types": ["node"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",   
    "paths": {
      "*": ["*"]
    }
  },
 "include": [
    "src",                         // <-- importante che includa src/types/**
    "src/types/**/*.d.ts"
  ]
}
